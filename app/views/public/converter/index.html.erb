<div class="min-h-screen bg-white flex items-center justify-center px-4">
  <div class="max-w-2xl w-full space-y-6">
    <h1 class="text-2xl font-bold text-slate-700">Gherkin to RSpec Converter</h1>

    <%= form_with url: converter_generate_path, method: :post, local: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :gherkin_input, "Paste Gherkin Scenario", class: "block text-sm font-medium text-slate-600 mb-1" %>
        <%= f.text_area :gherkin_input, rows: 10, class: "w-full p-3 border rounded-lg shadow-sm text-sm font-mono bg-slate-50" %>
      </div>

      <%= f.submit "Generate RSpec Code", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold text-sm shadow" %>
    <% end %>
  </div>
</div>
